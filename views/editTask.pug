form(class="createForm" hx-post="/editTask" hx-target="#"+task[0].id)
    input(type="text" name="name" value=task[0].name placeholder="title" required)
    input(type="text" name="desc" value=task[0].description placeholder="description" required)
    //input(type="email" name="worker" value=task[0].worker placeholder="worker" required)
    Select(name="status")
        option(value=0)="Waiting"
        option(value=1)="In progress"
        option(value=2)="Finished"
    select(name="email")
        option(value=task[0].worker)
            if(workers)
                each worker in workers
                    option(value=worker.email)=worker.email
    input(type="hidden" name="id" value=task[0].id)
    input(type="submit", value="save")