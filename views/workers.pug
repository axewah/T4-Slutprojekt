extends template.pug

block content 
    h3(class="clickable" hx-target="body" hx-trigger="click" hx-get="/") Houses
    button(class="createBtn block" hx-target="this" hx-swap="afterend" hx-trigger="click" hx-get="createWorker") create Worker
    if workers 
        each worker in workers 
            div(id=worker.id)
                p="email: "+worker.email
                button(class="createBtn block" hx-target="this" hx-swap="afterend" hx-trigger="click" hx-get="editWorker/"+worker.email) edit Worker
                button(class="createBtn block" hx-target="#"+worker.id hx-swap="delete" hx-trigger="click" hx-delete="worker/"+worker.email hx-confirm="Do you want to delete?") delete Worker